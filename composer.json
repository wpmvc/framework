{
    "name": "wpmvc/framework",
    "version": "1.3.0",
    "license": "MIT",
    "scripts": {
        "format": "vendor/bin/phpcbf --standard=phpcs.xml",
        "phpcs": "vendor/bin/phpcs --standard=phpcs.xml --report-full --report-checkstyle=./phpcs-report.xml"
    },
    "autoload": {
        "psr-4": {
            "WpMVC\\": "src/"
        }
    },
    "authors": [
        {
            "name": "MD AL AMIN",
            "email": "mdalaminbey@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "php-di/php-di": "7.1.1",
        "wpmvc/database": "1.3.0",
        "wpmvc/request-validator": "1.3.0",
        "wpmvc/routing": "1.3.0",
        "wpmvc/helpers": "1.3.0"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "1.8.3",
        "squizlabs/php_codesniffer": "^3.13.4",
        "dealerdirect/phpcodesniffer-composer-installer": "1.2.0",
        "phpcompatibility/phpcompatibility-wp": "2.1.8",
        "wp-coding-standards/wpcs": "^3.3.0"
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
